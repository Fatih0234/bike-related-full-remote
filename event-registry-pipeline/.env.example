# ----------------------------------------------------------------------------
# Database connection (preferred: single DATABASE_URL)
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME

# Optional split PG variables if DATABASE_URL is not used
PGHOST=
PGPORT=5432
PGUSER=
PGPASSWORD=
PGDATABASE=

# Supabase API access (optional; used when calling Supabase REST)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_ANON_KEY=

# ----------------------------------------------------------------------------
# Open311 / GeoReport API
# ----------------------------------------------------------------------------
OPEN311_BASE_URL=https://sags-uns.stadt-koeln.de/georeport/v2
OPEN311_TIMEOUT_SECONDS=30
OPEN311_PAGE_SIZE=100
OPEN311_USE_EXTENSIONS=true
OPEN311_MAX_WORKERS=10
OPEN311_MAX_RETRIES=3

# Ingestion tuning
INGESTION_OVERLAP_HOURS=12
INGESTION_ENABLE_GAP_FILL=true
INGESTION_GAP_FILL_LIMIT=5000
DUPLICATE_WINDOW_HOURS=24
DUPLICATE_COORD_PRECISION=4
DUPLICATE_REQUIRE_SERVICE_NAME=true
DUPLICATE_REQUIRE_ADDRESS=false
LINK_ONLY_MIN_CHARS=3

# ----------------------------------------------------------------------------
# LLM providers (optional; required when running labeling)
# ----------------------------------------------------------------------------
# Google Gemini (legacy projects use GOOGLE_API_KEY)
GOOGLE_API_KEY=
GEMINI_MODEL_ID=gemini-2.5-flash-lite
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_TEMPERATURE=0.0
GEMINI_MAX_OUTPUT_TOKENS=512
LABELING_SLEEP_SECONDS=0.1
LABELING_MAX_RETRIES=2
PHASE1_PROMPT_VERSION=p1_v006
PHASE2_PROMPT_VERSION=p2_v001

# Alternative providers if used later
OPENAI_API_KEY=
OPENROUTER_API_KEY=

# ----------------------------------------------------------------------------
# Langfuse tracing (optional)
# ----------------------------------------------------------------------------
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ----------------------------------------------------------------------------
# Runtime
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
RUN_ENV=local
